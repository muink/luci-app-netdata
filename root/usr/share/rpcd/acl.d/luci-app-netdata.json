{
  "luci-app-netdata": {
    "description": "Grant UCI access for netdata",
    "read": {
      "file": {
        "/etc/netdata/netdata.conf": [ "read" ],
        "/etc/init.d/netdata": [ "exec" ],
        "/usr/bin/openssl": [ "exec" ]
      },
      "ubus": {
        "file": [ "read" ]
      },
      "uci": [ "netdata" ]
    },
    "write": {
      "file": {
        "/etc/netdata/netdata.conf": [ "write" ]
      },
      "ubus": {
        "file": [ "write" ]
      },
      "uci": [ "netdata" ]
    }
  }
}
